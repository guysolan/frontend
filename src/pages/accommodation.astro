---
import { accommodation } from "../content/accommodation";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main class="max-w-[800px] mx-auto space-y-8 mb-6">
            <div class="px-6 text-lg text-zinc-800 space-y-4">
                <p class="leading-relaxed">
                    For the night of the wedding, younguns are more than welcome
                    to stay. Just bring a sleeping bag and roll mat.
                </p>
                <p class="leading-relaxed">
                    For those who prefer a little more luxury, here are some
                    local options:
                </p>
            </div>
            <ul class="px-4 space-y-8 my-4">
                {
                    accommodation.map((a) => (
                        <li class="flex flex-col lg:flex-row-reverse lg:gap-6 bg-beige mx-auto p-6 border border-zinc-400 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 lg:items-start">
                            <div class="flex-1 space-y-3">
                                <div class="space-y-1">
                                    <h2 class="text-xl lg:text-2xl font-semibold text-zinc-800">
                                        {a.name}
                                    </h2>
                                    <p class="text-lg text-zinc-700">
                                        {a.location}
                                    </p>
                                </div>
                                <ul class="flex flex-wrap gap-2 py-2">
                                    <li class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium border border-blue-700 text-blue-700">
                                        {a.travel} minutes
                                    </li>
                                    <li class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium border border-green-700 text-green-700">
                                        {a.price}
                                    </li>
                                </ul>
                                <a
                                    target="_blank"
                                    href={a.link}
                                    class="inline-flex items-center mt-4 px-4 py-2 text-sm font-medium text-white bg-emerald-600 rounded-md shadow-sm hover:bg-emerald-700 transition-all duration-200 group"
                                >
                                    <span>Visit website</span>
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-4 w-4 ml-2 transform group-hover:translate-x-0.5 transition-transform"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="3"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        />
                                    </svg>
                                </a>
                            </div>
                            <div class="mt-4 lg:mt-0 lg:w-1/2 overflow-hidden rounded-md shadow-sm">
                                <Image
                                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                                    width={450}
                                    height={300}
                                    src={a.image}
                                    alt={a.name}
                                />
                            </div>
                        </li>
                    ))
                }
            </ul>
        </main>
        <Footer />
    </body>
</html>
